{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es5", "es6"],
    "moduleResolution": "node",
    "module": "es6",
    "outDir": "dist",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "removeComments": true,
    "esModuleInterop": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "**/__tests__/*.spec.*"]
}
